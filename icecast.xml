<icecast>
    <!-- Настройки сети -->
    <listen-socket>
        <port>8000</port> <!-- Порт для слушания -->
        <bind-address>0.0.0.0</bind-address> <!-- Привязка ко всем интерфейсам -->
        <public-ip>auto</public-ip>
    </listen-socket>

    <!-- Места для логов -->
    <log>
        <accesslog>/var/log/icecast/access.log</accesslog>
        <errorlog>/var/log/icecast/error.log</errorlog>
        <loglevel>3</loglevel> <!-- Уровень логирования (от 0 до 4) -->
    </log>

    <!-- Контакты для администраторов -->
    <admin-user>admin</admin-user>
    <admin-password>admin-password</admin-password>
    <admin-email>admin@yourdomain.com</admin-email>

    <!-- Настройки безопасности -->
    <security>
        <chroot>0</chroot> <!-- Нет chroot -->
        <changeowner>
            <user>icecast</user>
            <group>icecast</group>
        </changeowner>
    </security>

    <!-- Параметры аутентификации -->
    <authentication>
        <admin>
            <username>admin</username>
            <password>admin-password</password>
        </admin>
        <source>
            <password>source-password</password>
        </source>
        <relay>
            <password>relay-password</password>
        </relay>
    </authentication>

    <!-- Дополнительные параметры -->
    <hostname>yourhostname.com</hostname> <!-- Ваш домен или IP-адрес -->
    <location>Earth</location>
    <public-server-name>My Icecast Server</public-server-name>
</icecast>
