<icecast>
    <limits>
        <clients>100</clients>
        <sources>2</sources>
        <queue-size>524288</queue-size>
        <client-timeout>30</client-timeout>
        <header-timeout>15</header-timeout>
        <source-timeout>10</source-timeout>
        <burst-on-connect>1</burst-on-connect>
        <burst-size>65535</burst-size>
    </limits>

    <authentication>
        <admin>
            <username>admin</username>
            <password>admin-password</password>
            <email>kozulinnikita970@gmail.com</email>
        </admin>
        <source>
            <password>source-password</password>
        </source>
        <relay>
            <password>relay-password</password>
        </relay>
    </authentication>

    <hostname>0.0.0.0</hostname>
    <location>Worldwide</location>

    <listen-socket>
        <port>8000</port>
    </listen-socket>

    <fileserve>1</fileserve>

    <paths>
        <basedir>/app</basedir>
        <logdir>/app/logs</logdir>
        <webroot>/app/web</webroot>
        <adminroot>/app/admin</adminroot>
        <pidfile>/tmp/icecast.pid</pidfile>
        <mimetypes>/app/mime.types</mimetypes>
        <alias source="/" destination="/status.xsl"/>
    </paths>

    <logging>
        <accesslog>/app/logs/access.log</accesslog>
        <errorlog>/app/logs/error.log</errorlog>
        <loglevel>3</loglevel>
        <logsize>10000</logsize>
    </logging>

    <security>
        <chroot>0</chroot>
        <changeowner>
            <user>nobody</user>
            <group>nogroup</group>
        </changeowner>
    </security>
</icecast>
